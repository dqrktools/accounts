<div id="modelWho" class="col-12 border-top border-bottom border-light divWho d-none">
    <div class="row justify-content-center text-center my-2">
        <div class="col-lg-6">
            <div class="form-floating mb-2 mb-lg-0">
                <select class="form-select form-custom selectWho" id="selectWho">
                    <option value="" selected>[Select]</option>

                    {{#each allDebtors}}
                        <option value="{{_id}}">{{nameShow}}</option>
                    {{/each}}
                </select>
                <label for="selectWho">Who</label>
            </div>
        </div>
        <div class="col-9 col-lg-4">
            <div class="form-floating">
                <input type="number" class="form-control form-custom inputValueWho" id="inputValueWho" step="0.01" placeholder="Example" onchange="changeValueWho()">
                <label for="inputValueWho">Value</label>
            </div>
        </div>
        <div class="col-3 col-lg-2">
            <button class="btn btn-outline-light w-100 h-100" onclick="removeElementWho(this)"><i class="fas fa-minus"></i></button>
        </div>
    </div>
</div>