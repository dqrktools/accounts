
<div class="row justify-content-center text-center">

    <div class="col-12 col-lg-5">
        <div class="table-responsive">
            <table class="table table-sm table-bordered text-light">
                <thead class="align-middle" style="background-color: rgba(69, 69, 69, 0.251);">
                    <tr>
                        <th scope="col" data-bs-toggle="tooltip" title="Total Value">TV</th>
                        {{#if (isChecking type)}}
                            <th scope="col" data-bs-toggle="tooltip" title="Credit Card Receipt">CCR</th>
                        {{/if}}
                    </tr>
                </thead>
                <tbody class="align-middle">
                    <tr>
                        <td class="{{totalAux}}"><span class="valueToHide d-none">{{total}}</span></td>
                        {{#if (isChecking type)}}
                            <td id="ccrValue{{_id}}" class="{{ccrAux}}"><span class="valueToHide d-none">{{ccr}}</span></td>
                        {{/if}}
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-6 col-lg-2 mb-3">
        <button class="btn btn-outline-light w-100 h-100" onclick="prepareToCreate('{{_id}}', '{{type}}')">Create Bill</button>
    </div>

    {{#if (isChecking type)}}
        <div class="col-6 col-lg-2 mb-3">
            <button class="btn btn-outline-light w-100 h-100" onclick="prepareToPayCCR('{{_id}}')">Pay CCR</button>
        </div>
    {{/if}}

    <div class="col-12 col-lg-2 mb-3 align-self-center">
        <div class="form-floating">
            <input type="date" class="form-control form-custom w-100 text-center" id="inputFrom" value="{{dateLastMonth}}" placeholder="Example" onchange="updateBillsDateShow('{{_id}}', this.value)">
            <label for="inputFrom">From</label>
        </div>
    </div>


    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-sm table-bordered text-light">
                <thead class="align-middle" style="background-color: rgba(69, 69, 69, 0.251);">
                    <tr>
                        <th class="fs-custom" scope="col">Date</th>
                        <th class="fs-custom" scope="col">Who?</th>
                        <th class="fs-custom" scope="col">Info</th>
                        <th class="fs-custom" scope="col">Value</th>
                        <th class="fs-custom" scope="col">Type</th>
                        <th class="fs-custom" scope="col" colspan="2"></th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    {{#each bills}}

                        <tr>
                            <td class="fs-custom">{{date}}</td>
                            <td class="fs-custom">{{debtorNameShow}}</td>
                            <td class="info fs-custom">{{info}}</td>
                            <td class="{{valueAux}} fs-custom"><span class="valueToHide d-none">{{value}}</span></td>
                            <td>
                                {{#if (isDebit type)}}
                                    <i class="fas fa-check fs-custom" data-bs-toggle="tooltip" title="Debit"></i>
                                {{else}}
                                    <i class="far fa-credit-card fs-custom" data-bs-toggle="tooltip" title="Credit"></i>
                                {{/if}}
                            </td>
                            <td>
                                <a role="button" data-bs-toggle="tooltip" title="Update" onclick="prepareToUpdate('{{_id}}')"><i class="far fa-edit fs-custom"></i></a>
                            </td>
                            <td>
                                <a role="button" data-bs-toggle="tooltip" title="Delete" onclick="prepareToDelete('{{_id}}', this)"><i class="far fa-trash-alt fs-custom"></i></a>
                            </td>
                        </tr>

                    {{/each}}

                </tbody>
            </table>

        </div>
    </div>
</div>