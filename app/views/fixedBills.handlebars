    <div class="row justify-content-center text-center text-white py-3">

        <h1 class="text-light mb-3">Fixed Bills</h1>

        <div class="col-6 col-lg-2">
            <div class="form-floating mb-2 mb-lg-3">
                <select class="form-select form-custom" id="selectYear" onchange="updateTable()">
                    <option value="all" selected>All</option>

                    {{#each allYears}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                    
                </select>
                <label for="selectYear">Year</label>
            </div>
        </div>

        <div class="col-6 col-lg-2">
            <div class="form-floating mb-2 mb-lg-3">
                <select class="form-select form-custom" id="selectBill" onchange="updateTable()">
                    <option value="all" selected>All</option>

                    {{#each allServices}}
