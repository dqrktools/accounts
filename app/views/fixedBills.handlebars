                    {{/each}}


                </select>
                <label for="selectBill">Bill</label>
            </div>
        </div>

        <div class="col-6 col-lg-2">
            <div class="form-floating mb-2 mb-lg-3">
                <select class="form-select form-custom" id="selectState" onchange="updateTable()">
                    <option value="all" selected>All</option>
                    <option value="late">Late</option>
                    <option value="paid">Paid</option>
                    <option value="future">Future</option>
                </select>
                <label for="selectState">State</label>
            </div>
        </div>

        <div class="col-6 col-lg-1 mb-2 mb-lg-3">
            <button class="btn btn-outline-light bg-dark-custom w-100 h-100 align-self-center" onclick="clearFields()">Clear</button>
        </div>

        <div class="w-100"></div>


        <input type="radio" class="btn-check" style="width: 0;" name="months" id="all" value="all" autocomplete="off" onchange="updateTable()" checked>
        <label class="btn btn-outline-light bg-dark-custom col-1 rounded-0 d-flex justify-content-center align-items-center" for="all"><p class="m-0 text-rotate">All</p></label>

        <div class="col-11 col-lg-10 row justify-content-center">


