<div class="modal fade" id="modalUpdate" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h3 class="modal-title text-center">Update Fixed Bill</h3>

                <div style="right: 2%; z-index: 10" class="position-absolute">
                    <a role="button" class="link-light" data-bs-dismiss="modal">
                        <i class="fas fa-times align-middle h3 m-0"></i>
                    </a>
                </div>
            </div>

            <div class="modal-body">
                
                <div class="row justify-content-center text-center">

                    <input name="idFixed" id="idFixed" class="d-none" disabled>

                    <div class="col-lg-7">
                        <div class="form-floating mb-3">
                            <input name="serviceFixed" type="text" class="form-control form-custom" id="serviceFixed" placeholder="Example" disabled>
                            <label for="serviceFixed">Service</label>
                        </div>
                    </div>

                    <div class="col-lg-5">
                        <div class="form-floating mb-3">
                            <select name="situationFixed" class="form-select form-custom" id="situationFixed" onchange="situationChanged(this.value)">

                                <option value="late">Late</option>
                                <option value="paid">Paid</option>
                                <option value="future">Future</option>

                            </select>
                            <label for="situationFixed">Situation</label>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-floating mb-3">
                            <input name="dueDateFixed" type="date" class="form-control form-custom" id="dueDateFixed" placeholder="Example">
                            <label for="dueDateFixed">DueDate</label>
                            <div class="invalid-feedback">
                                DueDate Empty.
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-floating mb-3">
                            <input name="paidDateFixed" type="date" class="form-control form-custom" id="paidDateFixed" placeholder="Example" disabled>
                            <label for="paidDateFixed">PaidDate</label>
                            <div class="invalid-feedback">
                                PaidDate Empty.
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8">
                        <div class="form-floating mb-3">
                            <textarea name="obsFixed" class="form-control form-custom" id="obsFixed" placeholder="Example"></textarea>
                            <label for="obsFixed">Obs</label>
                            <div class="invalid-feedback">
                                Obs Empty.
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-floating mb-3">
                            <input name="valueFixed" type="number" class="form-control form-custom" id="valueFixed" step="0.01" placeholder="Example">
                            <label for="valueFixed">Value</label>
                            <div class="invalid-feedback">
                                Value Empty.
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-floating mb-3">
                            <input name="receiptFixed" type="text" class="form-control form-custom" id="receiptFixed" placeholder="Example" disabled>
                            <label for="receiptFixed">Receipt</label>
                        </div>
                    </div>

                    <div class="col-lg-3 mb-3 mb-lg-0">
                        <button class="btn btn-danger w-100 h-100" data-bs-dismiss="modal">Cancel</button>
                    </div>

                    <div class="col-lg-3">
                        <button class="btn btn-light w-100 h-100" onclick="saveButton()">Save</button>
                    </div>

