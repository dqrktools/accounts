                <table class="table table-sm table-bordered text-light">
                    <thead class="align-middle" style="background-color: rgba(69, 69, 69, 0.251);">
                        <tr>
                            <th scope="col">DueDate</th>
                            <th scope="col">PaidDate</th>
                            <th scope="col">Service</th>
                            <th scope="col" style="width: 50%;">Obs</th>
                            <th scope="col">Value</th>
                            <th scope="col" colspan="2"></th>
                        </tr>
                    </thead>
                    <tbody id="tableBody" class="align-middle" style="background-color: rgba(0, 0, 0, 0.5);">

                        {{#each allFixeds}}

                            <tr id="{{_id}}" class="all {{situation}} {{serviceId}} {{year}} {{month}}">
                                <td>{{dueDate}}</td>
                                <td>{{paidDate}}</td>
                                <td>{{serviceNameShow}}</td>
                                <td>{{obs}}</td>
                                <td>{{value}}</td>
                                <td>
                                    <a role="button" data-bs-toggle="tooltip" title="Update" onclick="prepareToUpdate('{{_id}}')"><i class="far fa-edit"></i></a>
                                </td>
                                <td>
                                    <a role="button" data-bs-toggle="tooltip" title="Delete" onclick="prepareToDelete('{{_id}}')"><i class="far fa-trash-alt"></i></a>
                                </td>
                            </tr>

                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>        
